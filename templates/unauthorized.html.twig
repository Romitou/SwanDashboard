{% extends 'layouts/app.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}
{% block content %}
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4"><i class="fas fa-{{ fa }}"></i> {{ title }}</h1>
            <p>{{ message }}</p>
        </div>
        <div class="embed-responsive embed-responsive-16by9 mb-3">
            <iframe id="embed" class="embed-responsive-item" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"></iframe>
        </div>
        <a href="{{ path('home') }}" class="btn btn-facebook btn-block"><i class="fas fa-long-arrow-alt-left"></i> Retour Ã  l'accueil</a>
    </div>
    <script>
        const embed = document.getElementById('embed');

        const videos = [
            'wTZ2UCcoz_o',
            'qMQ-y9dHE2k',
            'dQw4w9WgXcQ',
            'uwmeH6Rnj2E',
            'jeg_TJvkSjg'
        ];

        const video = videos[Math.floor(Math.random() * videos.length)];

        embed.setAttribute('src', `https://www.youtube.com/embed/${video}?&autoplay=1`);
    </script>
{% endblock %}
